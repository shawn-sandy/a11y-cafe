---

type Props = {
  date: string;
  locale?: string;
};

const { date, locale } = Astro.props;
const formatDateIntl = (date) => {

  return new Intl.DateTimeFormat(locale || 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);

};

const formattedDate = formatDateIntl(date || Date.now());

---

<time datetime={date}> {formattedDate}</time>