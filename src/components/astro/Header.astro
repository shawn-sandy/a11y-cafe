---
import { SITE_DESCRIPTION } from "#utils/site-config.js";

export type Props = {
  headerTitle?: string;
  headerDescription?: string;
};
// const {  headerTitle, headerDescription } = Astro.props;
const headerTitle = Astro.props.headerTitle || "Header Title";
const headerDescription =
  Astro.props.headerDescription || SITE_DESCRIPTION || "Description text";
---

<header>
  <section>
    <h1 data-ui="display-" aria-describedby="header-description">
      {headerTitle}
    </h1>
    <p id="header-description">{headerDescription}</p>
    <p id="header-description" style="display: none;">{headerDescription}</p>
  </section>
</header>
