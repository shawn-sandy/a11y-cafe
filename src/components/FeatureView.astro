---
export type Props = {
  link?: string;
  showButton?: boolean;
  className?: string;
  buttonAriaLabel?: string;
};

const { link, showButton, className } = Astro.props;
---

<div class={`features`} data-grid>
  <slot />
  <div class="align-right">
    {
      showButton && (
        <a
          href={link}
          class="button-continue"
          aria-label="Continue reading Inclusive Patterns"
        >
          <b aria-hidden="true">Continue reading </b>
        </a>
      )
    }
  </div>
</div>
