---
export type Props = {
  link?: string;
  showButton?: boolean;
  className?: string;
  buttonAriaLabel?: string;
};

const { link, showButton, className, buttonAriaLabel } = Astro.props;
---

<div class={`features`} data-grid>
  <slot />
  {
    showButton && (
      <div class="align-right">
        <a
          href={link || "#"}
          class="button-continue"
          aria-label={buttonAriaLabel || "Continue reading"}
        >
          <b aria-hidden="true">Continue reading </b>
        </a>
      </div>
    )
  }
</div>
